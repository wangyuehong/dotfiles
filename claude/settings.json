{
  "env": {},
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cd:*)",
      "Bash(go:*)"
      "Bash(grep:*)",
      "Bash(jq:*)"
      "Bash(rd:*)"
      "Bash(rg:*)"
      "Bash(sed:*)"
      "Bash(yq:*)"
    ],
    "deny": [
      "Bash(rm:*)"
    ],
    "defaultMode": "plan"
  },
  "model": "opusplan",
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); printf '\\033[33m[%s]\\033[0m \\033[37m[%s]\\033[0m \\033[36m[%s]\\033[0m' \"$(echo \"$input\" | jq -r '.model.display_name')\" \"$(basename \"$(echo \"$input\" | jq -r '.workspace.current_dir')\")\" \"$(echo \"$input\" | jq -r '.session_id')\""
  }
}
