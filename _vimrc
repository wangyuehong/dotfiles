set history=9999

syntax on

filetype indent on
filetype plugin on
filetype plugin indent on

set nobackup
set noswapfile

set nu!
set ruler
set cursorline

set autoindent
set smartindent
set tabstop=4
set shiftwidth=4
set softtabstop=4
set smarttab

set showmatch
set incsearch
set hlsearch
set ignorecase
set smartcase

set backspace=eol,start,indent
set whichwrap+=<,>,h,l

set showcmd
set showmode

set encoding=utf-8
set termencoding=utf-8
set fileencodings=ucs-bom,utf-8,cp936,gb18030,big5,euc-jp,euc-kr,latin1
set helplang=cn

set foldenable
set foldmethod=indent
set foldlevel=99

set title                " change the terminal's title
set novisualbell         " don't beep
set noerrorbells         " don't beep